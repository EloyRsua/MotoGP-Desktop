<!ELEMENT circuito (
    nombre,
    longitudTrazado,
    anchura,
    fecha,
    hora,
    numero_vueltas,
    localidad,
    pais,
    patrocinador,
    referencias,
    galeria_fotografias,
    galeria_videos,
    punto_origen,
    puntos,
    resultados
)>

<!-- Datos generales -->
<!ELEMENT nombre (#PCDATA)>
<!ELEMENT longitudTrazado (#PCDATA)>
<!ATTLIST longitudTrazado unidad CDATA #REQUIRED>
<!ELEMENT anchura (#PCDATA)>
<!ATTLIST anchura unidad CDATA #REQUIRED>
<!ELEMENT fecha (#PCDATA)>
<!ELEMENT hora (#PCDATA)>
<!ELEMENT numero_vueltas (#PCDATA)>
<!ELEMENT localidad (#PCDATA)>
<!ELEMENT pais (#PCDATA)>
<!ELEMENT patrocinador (#PCDATA)>

<!-- Referencias -->
<!ELEMENT referencias (referencia+)>
<!ELEMENT referencia (#PCDATA)>

<!-- GalerÃ­as -->
<!ELEMENT galeria_fotografias (fotografia+)>
<!ELEMENT fotografia (#PCDATA)>

<!ELEMENT galeria_videos (video+)>
<!ELEMENT video (#PCDATA)>

<!-- Punto origen -->
<!ELEMENT punto_origen (longitude, latitude, altitude)>
<!ELEMENT longitude (#PCDATA)>
<!ELEMENT latitude (#PCDATA)>
<!ELEMENT altitude (#PCDATA)>

<!-- Puntos del circuito -->
<!ELEMENT puntos (punto+)>
<!ELEMENT punto (longitude, latitude, altitude)>
<!ATTLIST punto sector (1 | 2 | 3) #REQUIRED>

<!-- Resultados -->
<!ELEMENT resultados (vencedor)>
<!ELEMENT vencedor (nombre, tiempo)>
<!ELEMENT tiempo (#PCDATA)>
